{
    "name": "larammerce/validation",
    "description": "A request validation package based on laravel validation and larammerce annotation parser.",
    "keywords": [
        "library",
        "larammerce",
        "validation"
    ],
    "type": "library",
    "require": {
        "php": "^7.1.3",
        "larammerce/annotation-parser": "1.*",
        "laravel/framework": "5.8.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "orchestra/testbench-core": "3.8.*"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Arash Khajelou",
            "email": "a.khajelou@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Larammerce\\Validation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Larammerce\\Validation\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Larammerce\\Validation\\ValidationServiceProvider"
            ]
        }
    }
}
